<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.johnberkley.clickergame.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_guess"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="32dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btn_increase"
        android:layout_above="@+id/tv_guess"
        android:layout_centerHorizontal="true"
        android:textSize="32dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btn_decrease"
        android:layout_below="@+id/tv_guess"
        android:layout_centerHorizontal="true"
        android:textSize="32dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/btn_check"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guess A Number"
        android:id="@+id/tv_guessTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="32dp"
        android:gravity="center" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btn_reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
